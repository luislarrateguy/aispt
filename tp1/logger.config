# Set root logger level to DEBUG and its only appender to A1.
log4j.rootLogger=INFO, A1
log4j.appender.R=org.apache.log4j.RollingFileAppender
log4j.appender.R.File=ejemplo-busqueda-fallida.log
log4j.appender.Rxml=org.apache.log4j.RollingFileAppender
log4j.appender.Rxml.File=ejemplo-busqueda.xml

# A1 is set to be a ConsoleAppender.
log4j.appender.A1=org.apache.log4j.ConsoleAppender

# A1 uses PatternLayout.
log4j.appender.R.layout=org.apache.log4j.PatternLayout
log4j.appender.Rxml.layout=org.apache.log4j.PatternLayout
log4j.appender.A1.layout=org.apache.log4j.PatternLayout
#log4j.appender.A1.layout.ConversionPattern=%-4r [%t] %-5p %c %x - %m%n
log4j.appender.R.layout.ConversionPattern=[%t] %-5p %c %x - %m%n
log4j.appender.Rxml.layout.ConversionPattern=%m%n
log4j.appender.A1.layout.ConversionPattern=[%t] %-5p %c %x - %m%n

# Print the date in ISO 8601 format
#log4j.appender.A1.layout.ConversionPattern=%d [%t] %-5p %c - %m%n

# Print only messages of level WARN or above in the package com.foo.
log4j.logger.Pacman.Busqueda=INFO
#log4j.logger.Pacman.Busqueda.ejecucion3=INFO
log4j.logger.Pacman.Busqueda.Objetivo=DEBUG

# Configuración específica para ver una búsqueda.. que es muy larga

log4j.additivity.Pacman.Busqueda.ejecucion7=false
log4j.logger.Pacman.Busqueda.ejecucion7=INFO,R

log4j.additivity.Pacman.Busqueda.ejecucion1.xml=false
log4j.logger.Pacman.Busqueda.ejecucion1.xml=DEBUG,Rxml

